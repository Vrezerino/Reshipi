{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html",
				"run": {
					"region": "europe-north1"
				}
      },
			{
				"source": "/api/**",
				"function": "api",
				"run": {
					"region": "europe-north1"
				}
			}
    ]
  }
}
